<!-- Button trigger modal -->
<button class="btn btn-primary" style="margin-bottom:20px;" data-toggle="modal" data-target="#exampleModal">
    Create Client
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Client</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Clients" asp-action="Create">
                <div class="modal-body">

                    <div class="form-row" style="margin-bottom:15px;">
                        <div class="col">
                            <label for="inputEmail4">Client Name</label>
                            <input type="text" required asp-for="@Model.CreateClient.Name" class="form-control" placeholder="Client Name">
                        </div>
                        <div class="col">
                            <label for="inputEmail4">Client Email</label>
                            <input type="text" required asp-for="@Model.CreateClient.Email" class="form-control" placeholder="Client Email">
                        </div>
                    </div>
                    <div class="form-row" style="margin-bottom:15px;">
                        <div class="col">
                            <label for="inputEmail4">Contact Phone</label>
                            <input type="text" required asp-for="@Model.CreateClient.ContactNumber" class="form-control" placeholder="Contact Phone">
                        </div>
                        <div class="col">
                            <label for="inputEmail4">Contact Address</label>
                            <input type="text" required asp-for="@Model.CreateClient.Address" class="form-control" placeholder="Contact Address">
                        </div>
                    </div>
                   
                        <input type="hidden" asp-for="@Model.CreateClient.BusinessId" value="@Model.Business.Id" class="form-control" placeholder="Contact Address">
                   </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Business Clients</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Client
                        </th>
                        <th>
                            Number
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Email
                        </th>
                       
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @{var counter = 0;}
                    @foreach (var item in Model.Clients)
                    {
                        counter = counter + 1;
                        <tr>
                            <td>
                                @counter
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClientName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <a class="btn btn-outline-primary" asp-controller="Clients" asp-action="Details" asp-route-id="@item.Id">Invoices</a> |
                                <a class="btn btn-outline-danger" asp-controller="Clients" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


